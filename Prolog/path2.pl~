edges(a,f).
edges(a,b).
edges(f,g).
edges(f,e).
edges(f,c).
edges(g,c).
edges(b,c).
edges(c,e).
edges(c,d).
edges(e,d).
connected(X,Y):-(edges(X,Y);edges(Y,X)).
path(A,B,Path):-
    travel(A,B,[A],Q),
    reverse(Q,Path).
travel(A,B,P,[B|P]):-
    connected(A,B).
travel(A,B,Visited,Path):-
    connected(A,C),
    C\==B,
    \+member(C,Visited),
    travel(C,B,[C|Visited],Path).

